        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN221_ProjectDemo"
        mc:Ignorable="d"
         Title="Login" Height="390" Width="260">
    <Grid>
        <Label Content="EmployeeId" HorizontalAlignment="Left" Margin="11,95,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txacc" HorizontalAlignment="Left" Margin="95,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="OldPassword" HorizontalAlignment="Left" Margin="11,130,0,0" VerticalAlignment="Top"/>
