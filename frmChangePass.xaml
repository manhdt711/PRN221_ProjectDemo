        <Label Content="NewPassword" HorizontalAlignment="Left" Margin="9,0,0,0" VerticalAlignment="Center"/>
        <TextBox x:Name="txtPass" HorizontalAlignment="Left" Margin="95,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="120"/>
        <Button Content="Back" HorizontalAlignment="Left" Margin="56,239,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
        <Label x:Name="txtNofy"  HorizontalAlignment="Center" Margin="0,299,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.211,0.04"/>
